@model IEnumerable<Event>
@{
    ViewData["Title"] = "Up coming Events";
}
<div>
   <h2>Here is the list of All Up Coming Events</h2>
    <table class="table table-responsive bg-light">
        <thead>
            <tr>
                <th>Name</th>
                <th>Location</th>
                <th>DateTime</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null)
            {
                @foreach (Event e in Model)
                {
                    <tr>
                        <td>@e.Name</td>
                        <td>@e.Location</td>
                        <td>@e.DateTime</td>
                        <td><a asp-action="Update" asp-route-id="@e.Id">Update</a></td>
                        <td>
                            <!-- <form asp-route-id="@e.Id" asp-action="CancelEvent" method="post">
                            <button type="submit" >Cancel Event</button>
                            </form>-->
                            <a asp-action="CancelEvent" asp-route-id="@e.Id">Cancel</a>

                        </td>
                    </tr>
                }

            }
            <tr><td><span class="alert-danger">@Html.ValidationMessage("Error")</span></td></tr>
        </tbody>

    </table>
</div>