@model Event
@{
    ViewData["Title"] = "Schedule Event";
}
<h2>Schedule Event</h2>
<div class="container shadow p-5">
   
<form method="post" enctype="multipart/form-data" asp-controller="Event">
        <div class="form-row">
            <div class="form-group col-md-6">
                <label asp-for="Name">Name:</label>
                <input type="text" class="form-control mb-3" asp-for="Name" />
                <span asp-validation-for="Name" class="alert-danger"></span>
            </div>
            <div class="form-group col-md-6">
                <label asp-for="Location">Location:</label>
                <input type="text" class="form-control mb-3"  asp-for="Location" />
                <span asp-validation-for="Location" class="alert-danger"></span>
            </div>
            <div class="form-group col-md-6">
                <label asp-for="DateTime">DateTime:</label>
                <input class="form-control mb-3" asp-for="DateTime" />
                <span asp-validation-for="DateTime" class="alert-danger"></span>
                <span class="alert-danger">@Html.ValidationMessage("Duplicate")</span>
            </div>
            <div>
                <span class="alert-danger">@Html.ValidationMessage("Error")</span>
            </div>
            </div>
        <input type="submit" class="btn btn-lg btn-primary p-2" value="Submit" />
</form>
</div>